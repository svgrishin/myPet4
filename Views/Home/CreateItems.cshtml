@model myPet4.Models.ItemPerson
@using myPet4.Controllers

@{
    ViewData["Title"] = "Добавление статей расходов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <form asp-action="CreateItems">
        <h1>@ViewData["Title"]</h1>
        <div class="leftItems">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nameOf" class="control-label"></label>
                <input asp-for="nameOf" class="form-control" />
                <span asp-validation-for="nameOf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="summ" class="control-label"></label>
                <input asp-for="summ" class="form-control" />
                <span asp-validation-for="summ" class="text-danger"></span>
            </div>
            <br />
        </div>
        <input type="submit" value="Add" class="centerButton" />
        <br />
        <br />
        <hr />
        <br />
        <button class="systemButton" style="width:45%" formmethod="get" asp-action="CreateFinance">Назад</button>
        <input type="submit" asp-action="saveProfile" value="Готово" style="width:45%" />
    </form>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
