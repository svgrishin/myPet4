@model myPet4.Models.UserData
@using myPet4.Models
@using myPet4.Controllers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body id="bodyTransactions">
    <form asp-action="AddIncome" class="topPanels" style="height:300px; background:none">
        <progress value=@Model.currentIncome max=@Model.Person.Finance.salary></progress>
        <div class="itemLabel" style="display:flex">
            <label>@Model.currentIncome &#8381</label>
            <label style="background:none; color: grey; text-align:right; font-weight:600">@Model.Person.Finance.freeMoney &#8381</label>
        </div>
        <div style="display:flex">
            <label style="background:none; width: 55%; display: inline-block">Доходы</label>
            <input value="" type="submit" id="addItem" asp-action="AddIncome" asp-route-id="@Model.Person.id" class="itemButton" />
            <button id="editItem" asp-action="EditIncome" class="itemButton"></button>
            <button id="deleteItem" asp-action="DeleteIncome" class="itemButton"></button>
        </div>
        @Html.ListBox("incomeId", new SelectList(Model.Person.income, "id","summ"))
    </form>
</body>

<script>
    {
        var s = document.getElementsByName("incomeId");
        s.forEach(p => p.removeAttribute("multiple"));
        s.forEach(p => p.setAttribute("size", 2));
    }
</script>