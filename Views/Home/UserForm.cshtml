@model myPet4.Models.UserData;
@using myPet4.Models;
@using myPet4.Controllers;

@{
    ViewData["Title"] = Model.Person.login;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div>
        <table>
            <tr>
                <td>
                    <form class="topPanels" style="vertical-align:bottom">
                        <label style="background:none">Просмотр по дате</label>
                        <input style="margin: 0 5% 0 5%" type="date" />
                    </form>
                </td>
                <td>
                    <form class="topPanels">
                        <label style="background:none" asp-for="Person.Finance.cash"></label>
                        <label style="margin: 0 5% 0 5%">@Model.Person.Finance.cash</label>
                    </form>
                </td>
                <td>
                    <form class="topPanels">
                        <label style="background:none" asp-for="Person.Finance.freeMoney"></label>
                        <label style="margin: 0 5% 0 5%">@Model.Person.Finance.freeMoney</label>
                    </form>
                </td>
                <td>
                    <form class="topPanels">
                        <label style="background:none" asp-for="currentIncome"></label>
                        <label style="margin: 0 5% 0 5%">@Model.currentIncome</label>
                    </form>
                </td>
                <td>
                    <form class="topPanels">
                        <label style="background:none" asp-for="profit"></label>
                        <label style="margin: 0 5% 0 5%">@Model.profit</label>
                    </form>
                </td>
                <td>
                    <form class="topPanels">
                        <label style="background:none" asp-for="Person.Finance.credit"></label>
                        <label style="margin: 0 5% 0 5%">@Model.Person.Finance.credit</label>
                    </form>
                </td>
                <td>
                    <form class="topPanels">
                        <label style="background:none" asp-for="toSaveByPeriod"></label>
                        <label style="margin: 0 5% 0 5%">@Model.toSaveByPeriod</label>
                    </form>
                </td>
                <td>
                    <form class="topPanels">
                        <label style="background:none" asp-for="savedMoney"></label>
                        <label style="margin: 0 5% 0 5%">@Model.savedMoney</label>
                    </form>
                </td>
            </tr>
        </table>
        <br />
        <br />
        <table>
            <tr>
                @foreach (ItemPerson item in Model.Person.ItemPerson)
                {
                    <td>
                        <form class="topPanels" style="height:400px">
                            <label style="background:none">@item.nameOf</label>
                            @{
                                List<string> s = new List<string>();
                            }
                            @foreach (Transactions transaction in item.Transactions)
                            {
                                s.Add(transaction.summ.ToString());
                            }
                            @Html.ListBox("fdafasf",new SelectList(s))
                        </form>
                    </td>
                }
            </tr>
        </table>
    </div>
</body>

